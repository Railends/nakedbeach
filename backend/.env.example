# Steam API Configuration
STEAM_API_KEY=your_steam_api_key_here

# Steam Bot Account Credentials
BOT_USERNAME=your_bot_steam_username
BOT_PASSWORD=your_bot_steam_password

# Steam Bot 2FA Secrets (Get these from Steam Desktop Authenticator or similar)
# Guide: https://github.com/DoctorMcKay/node-steam-totp#usage
BOT_SHARED_SECRET=your_shared_secret_here
BOT_IDENTITY_SECRET=your_identity_secret_here

# Bot Steam ID (64-bit)
BOT_STEAM_ID=your_bot_steam_id_64

# Server Configuration
PORT=5000
